modules = ["bash", "python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Scramblelist Runner"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "scramblelist_runner"

[[workflows.workflow]]
name = "Scramblelist Runner"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash clone_and_run.sh"
waitForPort = 5000

[[workflows.workflow]]
name = "scramblelist_runner"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash clone_and_run.sh"

[deployment]
run = ["sh", "-c", "bash clone_and_run.sh"]

[[ports]]
localPort = 5000
externalPort = 80
